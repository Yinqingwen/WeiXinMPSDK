@functions{
    public string GetMPname()
    {
        return string.IsNullOrWhiteSpace(Configuration.GetSection("SystemSetting")["MPName"]) ? "Manager" : Configuration.GetSection("SystemSetting")["MPName"];
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - @GetMPname()</title>

    <environment names="">
        <link rel="stylesheet" href="~/lib/weui/style/weui.css" />
        <link rel="stylesheet" href="~/lib/jquery-weui/css/jquery-weui.css" />
    </environment>
    <environment names="">
        <link rel="stylesheet" href="~/lib/weui/style/weui.min.css" />
        <link rel="stylesheet" href="~/lib/jquery-weui/css/jquery-weui.min.css" />
    </environment>

    @RenderSection("css",false)
</head>
<body>
    <div>
        @RenderBody()
    </div>

    <environment names="">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
        <script type="text/javascript" src="~/lib/jquery-weui/js/jquery-weui.js"></script>
        <script type="text/javascript" src="~/lib/fastclick/fastclick.js"></script>
    </environment>
    <environment names="">
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
        <script type="text/javascript" src="~/lib/jquery-weui/js/jquery-weui.min.js"></script>
        <script type="text/javascript" src="~/lib/fastclick/fastclick.min.js"></script>
    </environment>

    @RenderSection("Script",false)

    <script type="text/javascript">
        $.ready(function () {
            FastClick.attach(document.body); 
        });
    </script>
</body>
</html>
